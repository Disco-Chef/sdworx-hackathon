<div class="navbar navbar-expand-sm navbar-light navbar-sdworx">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "sdworx.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item <%= 'active' if params[:controller] == 'dashboard' %> ">
        <%= link_to "Dashboard", dashboard_index_path, class: "nav-link" %>
      </li>
      <li class="nav-item <%= 'active' if params[:action] == 'adventure' %>">
        <%= link_to "New Adventures", adventure_path, class: "nav-link" %>
      </li>
      <li class="nav-item <%= 'active' if params[:controller] == 'profile' %>">
        <%= link_to "My Profile", main_profile_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.profile&.photo&.attached?%>
          <%= cl_image_tag current_user.profile&.photo&.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
        <%else%>
          <%= image_tag "http://icons.iconarchive.com/icons/diversity-avatars/avatars/1024/batman-icon.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <%end%>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
