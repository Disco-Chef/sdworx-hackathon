      <li class="nav-item <%= 'active' if params[:action] == 'adventure' %>">
        <%= link_to "New Adventures", adventure_path, class: "nav-link" %>
      </li>
       <li class="nav-item <%= 'active' if params[:controller] == 'dashboard' %> ">
          <%= link_to "Dashboard", dashboard_index_path, class: "nav-link" %>
        </li>
      <li class="nav-item dropdown">
        <% if current_user.profile&.photo&.attached?%>
          <%= cl_image_tag current_user.profile&.photo&.key, class: "avatar dropdown-toggle" %>
