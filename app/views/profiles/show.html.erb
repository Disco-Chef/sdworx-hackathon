<div class="container">
  <div class="row">
    <div class="col-3 card mr-1 d-flex justify-content-center align-items-center">

      <h1><b><%= @profile.nickname %></b></h1>
      <% if @profile&.photo&.attached?%>
        <%= cl_image_tag @profile&.photo&.key, class: "avatar-large" %>
      <%else%>
        <%= image_tag "http://icons.iconarchive.com/icons/diversity-avatars/avatars/1024/batman-icon.png", class: "avatar-large" %>
      <%end%>
    </div>
    <div class="col-8 card">
      <div class="list-group list-group-flush">
        <div class="list-group-item">
          <h2>‚úî Completed Quests ‚úî</h2>
          <h2>total XP: <%= @profile.completed_quests_xp %> </h2>
          <% @profile.completed_quests.each do |completed_quest| %>
            <div class="card mb-1 p-2">
              <h3><strong><%= completed_quest.name.capitalize %></strong></h3>
              <p><%= completed_quest.description %></p>
              <h3>Awarded: <%= completed_quest.xp %></h3>
            </div>
          <% end %>
        </div>

        <div class="list-group-item">
          <h2>üìù Active Quests üìù</h2>
          <% @profile.current_quests.each do |current_quest| %>
            <div class="card mb-1 p-2">
              <h3><strong><%= current_quest.name.capitalize %></strong></h3>
              <p><%= current_quest.description %></p>
              <h3>Reward: <%= current_quest.xp %></h3>
            </div>
          <% end %>
        </div>
       <div class="list-group-item">
          <h2>ü§† Most Wanted Baddies ü§†</h2>
          <h3> Total XP: <%= @profile.bad_guys_xp %> </h3>
          <% @profile.bad_guys.each do |bad_guy| %>
            <div class="card mb-1 p-2">
              <h3><strong><%= bad_guy.name.capitalize %></strong></h3>
              <p><%= bad_guy.story %></p>
              <h3>Reward: <%= bad_guy.total_xp %></h3>
            </div>
          <% end %>
        </div>
        <div class="list-group-item">
          <h2>‚≠ê Power Ups! ‚≠ê</h2>
          <h3> Total XP: <%= @profile.total_power_ups_xp %></h3>
          <% @profile.power_ups.each do |power_up| %>
            <div class="card mb-1 p-2">
              <h3><strong><%= power_up.name.capitalize %></strong></h3>
              <p><%= power_up.description %></p>
              <h3>Reward/Awarded: <%= power_up.total_xp %></h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
