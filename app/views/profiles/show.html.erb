<div class="container">
  <div class="row">
    <div class="col-3 card mr-1 d-flex justify-content-center align-items-center text-center">

      <h1><b><%= @profile.nickname %></b></h1>
      <% if @profile&.photo&.attached?%>
        <%= cl_image_tag @profile&.photo&.key, class: "avatar-large" %>
      <%else%>
        <%= image_tag "http://icons.iconarchive.com/icons/diversity-avatars/avatars/1024/batman-icon.png", class: "avatar-large" %>
      <%end%>
      <p class="text-muted mt-2"><%= @profile.secret_bio  %></p>
      -
      <p class="mt-2"> <strong> <%= @profile.chosen_vision.motto %> </strong> </p>
    </div>
    <div class="col-8 card">
      <div class="list-group list-group-flush">
        <div class="list-group-item">
          <h2>✔ Completed Quests ✔</h2>
          <h3>Total XP: <%= @profile.completed_quests_xp %> XP</h3>
          <% @profile.completed_quests.each do |completed_quest| %>
            <%= render 'dashboard/completed_quest', quest: completed_quest %>
          <% end %>
        </div>

        <div class="list-group-item">
          <h2>📝 Active Quests 📝</h2>
          <% @profile.current_quests.each do |current_quest| %>
            <%= render 'dashboard/active_quest', quest: current_quest %>
          <% end %>
        </div>
       <div class="list-group-item">
          <h2>🤠 Most Wanted Baddies 🤠</h2>
          <h3> Total XP: <%= @profile.bad_guys_xp %> </h3>
          <% @profile.bad_guys.each do |bad_guy| %>
            <%= render 'dashboard/bad_guy', bad_guy: bad_guy %>
          <% end %>
        </div>
        <div class="list-group-item">
          <h2>⭐ Power Ups! ⭐</h2>
          <h3> Total XP: <%= @profile.total_power_ups_xp %></h3>
          <% @profile.power_ups.each do |power_up| %>
            <%= render 'dashboard/power_up', power_up: power_up %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
