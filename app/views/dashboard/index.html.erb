<div class="container">
  <h1>My Dashboard</h1>

  <h2>🧙‍♂️ Teams 🧙‍♀️</h2>
  <ul>
    <% @teams.each do |team| %>
      <li>team.id</li>
    <% end %>
  </ul>


  <h2>✔ Completed Quests ✔</h2>
  <h2>Active Quests</h2>
  <% @completed_quests.each do |completed_quest| %>
    <div class="card">
      <h3><strong><%= completed_quest.name.capitalize %></strong></h3>
      <p><%= completed_quest.description %></p>
      <h3>Awarded: <%= completed_quest.xp %></h3>
    </div>
  <% end %>


  <h2>📝 Active Quests 📝</h2>
  <% @current_quests.each do |current_quest| %>
    <div class="card">
      <h3><strong><%= current_quest.name.capitalize %></strong></h3>
      <p><%= current_quest.description %></p>
      <h3>Reward: <%= current_quest.xp %></h3>

      <%= simple_form_for(current_quest, url: change_completion_rate_path, remote: true) do |f| %>
        <%= f.input :id, as: :hidden %>
        <%= f.input :completion_rate, as: :range, min: 0, max: 100, label: false %>
        <%= f.button :submit, class: "btn btn-info"  %>
      <% end %>
    </div>
  <% end %>


  <h2>🤠 Most Wanted Baddies 🤠</h2>
  <% @bad_guys.each do |bad_guy| %>
    <div class="card">
      <h3><strong><%= bad_guy.name.capitalize %></strong></h3>
      <p><%= bad_guy.story %></p>
      <h3>Reward: <%= bad_guy.xp %></h3>
      <h3>Total XP gained from previously slaying this baddie: <%= bad_guy.total_xp %></h3>
      <%= link_to "Neutralized!", defeat_bad_guy_path(bad_guy), method: :patch, class: "btn btn-info", remote: true  %>
    </div>
  <% end %>

  <h2>⭐ Power Ups! ⭐</h2>
  <% @power_ups.each do |power_up| %>
    <div class="card">
      <h3><strong><%= power_up.name.capitalize %></strong></h3>
      <p><%= power_up.description %></p>
      <h3>Reward/Awarded: <%= power_up.total_xp %></h3>
      <%= link_to "Acquire PowerUp!", increase_power_up_path(power_up), method: :patch  %>
    </div>
  <% end %>
</div>
